#include<stdio.h>
main()
{
	int n;
		scanf("%d",&n);
	int nsp=n-1;
	for(int i=1;i<=5;i++){
		int a=i-1;
		//int nsp=n-1;
		for(int j=1;j<=nsp;j++){
			printf(" ");
			
		}
		nsp--;
		for(int k=1;k<=i;k++){
			printf("%d",k);
		}
	    
	for(int z=1;z<=i-1;z++){
			printf("%d",a);
		a--;	
		}
		
	printf("\n");
	}
}
